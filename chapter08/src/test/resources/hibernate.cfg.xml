<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="jakarta.persistence.jdbc.driver" >org.postgresql.Driver</property>
        <property name="jakarta.persistence.jdbc.url"> jdbc:postgresql://10.187.160.84:5432/jpa-persistence-unit</property>
        <property name="jakarta.persistence.jdbc.user"> keycloak </property>
        <property name="jakarta.persistence.jdbc.password">password</property>
        <property name="dialect">org.hibernate.dialect.PostgresPlusDialect</property>
        <property name="hibernate.cache.region.factory_class">
            jcache
        </property>
        <property name="hibernate.javax.cache.missing_cache_strategy">
            create
        </property>
        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>
        <property name="use_sql_comments">true</property>
        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">create-drop</property>
        <mapping class="models.Publisher"/>
    </session-factory>
</hibernate-configuration>